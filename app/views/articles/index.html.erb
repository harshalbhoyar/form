<h1>Listing Articles</h1>
<head>
<style>
table, th, td{
  border: 1px solid black;
  background-color: green
  border-collapse: collapse;
}
</style>
</head>
<table>
	<tr>
		<th style="background-color:#00FF00">Title</th>
		<th style="background-color:#00FF00">Text</th>
		<th style="background-color:#00FF00">Author</th>
		<th style="background-color:#00FF00">Publication</th>
		<th style="background-color:#00FF00" >Created At</th>
		<th style="background-color:#00FF00">Updated At</th>
		<th colspan="3" style="background-color:#00FF00"> Actions</th>
	</tr>

	<% @articles.each do |article| %>
	   <tr>
	   	   <td><%= article.title %></td>
	   	   <td><%= article.text %></td>
	   	   <td><%= article.author %></td>
	   	   <td><%= article.publication %></td>
	   	   <td><%= article.created_at.strftime("%d, %b,%Y %H:%M:%S") %></td>
	   	    <td><%= article.updated_at.strftime("%d, %b, %Y %H:%M:%S") %></td>
	   	   <td><%= link_to 'Show', article_path(article) %></td>
	   	   <td><%= link_to 'Edit', edit_article_path(article) %></td>
	   	   <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

	   </tr>
<% end %>
</table>

<%= link_to 'New article', new_article_path %>
<%= link_to 'Back',articles_path %>
